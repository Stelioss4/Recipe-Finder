@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <button class="btn btn-primary" @onclick="NavigateToProfile">Profile</button>
                </Authorized>
                <NotAuthorized>
                    <div class="nav-item px-2">
                        <NavLink class="nav-link" href="Account/LogIn">
                            <span class="bi bi-person-nav-menu" aria-hidden="true"></span> User Log In
                        </NavLink>
                    </div>

                    <div class="nav-item px-2">
                        <NavLink class="nav-link" href="Account/Register">
                            <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> User Register
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private void NavigateToUserAccount()
    {
        Navigation.NavigateTo("/Account/LogIn");
    }

    private void NavigateToLogIn()
    {
        Navigation.NavigateTo("/Account/userLogIn");
    }

    private void NavigateToProfile()
    {
        Navigation.NavigateTo("/profile");
    }
}
