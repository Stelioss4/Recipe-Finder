@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <button class="btn btn-primary" @onclick="NavigateToProfile">Profile</button>
                </Authorized>
                <NotAuthorized>
                    <button class="btn btn-primary" @onclick="NavigateToUserAccount">Register</button>
                    <button class="btn btn-secondary" @onclick="NavigateToLogIn">Log in</button>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private void NavigateToUserAccount()
    {
        Navigation.NavigateTo("/userAccount");
    }

    private void NavigateToLogIn()
    {
        Navigation.NavigateTo("/userLogIn");
    }

    private void NavigateToProfile()
    {
        Navigation.NavigateTo("/profile");
    }
}
